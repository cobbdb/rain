                <span class="icon-bar" ng-repeat="i in [1,2,3]"></span>
            </a>
            <span class="brand">Map</span>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li>
                        <div class="input-append navbar-search">
                            <input class="span2" id="mapSearch" placeholder="Search Map" type="text">
                            <button class="btn" type="button">
                                <i class="icon-search"></i>
                            </button>
                        </div>
                    </li>
                </ul>
                <ul class="nav pull-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle hidden-phone hidden-tablet" data-toggle="dropdown">
